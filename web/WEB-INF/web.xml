<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>sign_up</servlet-name>
        <servlet-class>sign_up</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sign_in_red</servlet-name>
        <servlet-class>sign_in_red</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sign_up_fl</servlet-name>
        <servlet-class>sign_up_fl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>free_sign_red</servlet-name>
        <servlet-class>free_sign_red</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>client_log_red</servlet-name>
        <servlet-class>client_log_red</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>freelancer_log_red</servlet-name>
        <servlet-class>freelancer_log_red</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login_client</servlet-name>
        <servlet-class>login_client</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login_freelancer</servlet-name>
        <servlet-class>login_freelancer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>search_client</servlet-name>
        <servlet-class>search_client</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>search_freelancer</servlet-name>
        <servlet-class>search_freelancer</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sign_up</servlet-name>
        <url-pattern>/sign_up</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sign_in_red</servlet-name>
        <url-pattern>/sign_in_red</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sign_up_fl</servlet-name>
        <url-pattern>/sign_up_fl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>free_sign_red</servlet-name>
        <url-pattern>/free_sign_red</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>client_log_red</servlet-name>
        <url-pattern>/client_log_red</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>freelancer_log_red</servlet-name>
        <url-pattern>/freelancer_log_red</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login_client</servlet-name>
        <url-pattern>/login_client</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login_freelancer</servlet-name>
        <url-pattern>/login_freelancer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>search_client</servlet-name>
        <url-pattern>/search_client</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>search_freelancer</servlet-name>
        <url-pattern>/search_freelancer</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
